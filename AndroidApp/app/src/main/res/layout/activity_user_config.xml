<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserConfigActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/debug1View"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <CheckBox
                android:id="@+id/newsAppCheck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="News app" />

            <CheckBox
                android:id="@+id/covidTrackerCheck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="COVID tracker" />

            <CheckBox
                android:id="@+id/trafficStatusCheck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Traffic status" />

            <CheckBox
                android:id="@+id/weatherAppCheck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Weather app" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/saveConfigButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="saveConfig"
                android:text="Save config" />

            <Button
                android:id="@+id/chooseUserImageButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="pushChooseImageActivity"
                android:text="choose user image" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>